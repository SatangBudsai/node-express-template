{
  "name": "node-express-template",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@types/morgan": "^1.9.9",
    "express": "^4.19.2",
    "morgan": "^1.10.0",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.3.1"
  },
  "scripts": {
    "start": "node build/index.js",
    "build": "tsc",
    "debug-controllers": "echo Matched controllers: && ls ./src/controllers/*.ts",
    "build:swagger": "tsoa spec-and-routes",
    "swagger": "tsoa spec",
    "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec\""
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node src/index.ts"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.9",
    "@types/swagger-ui-express": "^4.1.6",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  }
}
